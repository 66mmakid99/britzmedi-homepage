---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const products = await getCollection('products');
const sortedProducts = products.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Global Leader in Aesthetic Medicine" lang="en">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-bg">
            <img 
                src="https://images.unsplash.com/photo-1576091160550-2173dba999ef?w=1920&q=80" 
                alt="BRITZMEDI" 
                class="hero-bg-image"
            />
            <div class="hero-bg-overlay"></div>
        </div>
        <div class="hero-content">
            <p class="hero-subtitle">Aesthetic Medical Device Excellence</p>
            <h1 class="hero-title"><em>Global Leader</em><br>in Aesthetic Medicine</h1>
            <p class="hero-description">BRITZMEDI leads the future of aesthetic medicine through innovative R&D and product development.</p>
            <div class="hero-cta">
                <a href="#about" class="btn">
                    Learn More
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
        <div class="hero-scroll">
            <span>SCROLL</span>
            <div class="hero-scroll-line"></div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="bg-darker" style="padding: 6rem 4rem;">
        <div class="container">
            <div class="section-header reveal">
                <p class="section-label">Our Products</p>
                <h2 class="section-title">Innovative <em>Product</em> Lineup</h2>
            </div>
            <div class="products-grid">
                {sortedProducts.map(product => (
                    <div class="product-card reveal">
                        <div class="product-card-image">
                            <img 
                                src={product.data.image.src} 
                                alt={product.data.name}
                            />
                        </div>
                        <div class="product-card-content">
                            <p class="product-card-label">
                                {product.data.category === 'medical' ? 'Medical Device' : 'Medical Cosmetic'}
                            </p>
                            <h3 class="product-card-title">{product.data.name}</h3>
                            <p class="product-card-desc">
                                {product.data.category === 'medical' 
                                    ? 'Premium aesthetic medical device with cutting-edge technology.'
                                    : 'Medical-grade cosmetic developed with dermatologists.'}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="stats-grid reveal">
            <div class="stat-item">
                <div class="stat-number">2017</div>
                <div class="stat-label">Established</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">500+</div>
                <div class="stat-label">Partner Clinics</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">KFDA</div>
                <div class="stat-label">Certified</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">Global</div>
                <div class="stat-label">Expansion</div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="bg-dark" style="padding: 6rem 4rem;">
        <div class="container">
            <div class="about-preview">
                <div class="about-image reveal">
                    <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&q=80" alt="BRITZMEDI Company" />
                </div>
                <div class="about-content reveal">
                    <p class="section-label">About BRITZMEDI</p>
                    <h2>Your Partner for<br><em>Healthy Beauty</em></h2>
                    <p>Since 2017, BRITZMEDI has grown as a global leader in aesthetic medicine. We drive the future of beauty through competitive R&D and innovative product development.</p>
                    <p>We are committed to being your trusted partner with a pioneering spirit in global aesthetic medicine.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-cta reveal">
        <p class="section-label">Contact Us</p>
        <h2>Get in Touch</h2>
        <p>For product inquiries, demo requests, or partnership proposals, please contact us.</p>
        <a href="mailto:info@britzmedi.com" class="btn btn-primary">
            Contact Us
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
        </a>
    </section>
</BaseLayout>

<style>
    /* Same styles as main index.astro */
    .hero {
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .hero-bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 30%;
        opacity: 0.4;
    }
    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(10,10,10,0.9) 0%, rgba(10,10,10,0.6) 50%, rgba(10,10,10,0.8) 100%);
    }
    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        max-width: 1000px;
        padding: 0 2rem;
    }
    .hero-subtitle {
        font-size: 0.85rem;
        letter-spacing: 0.4em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.5s;
    }
    .hero-title {
        font-family: var(--font-main);
        font-size: clamp(2.5rem, 6vw, 5rem);
        font-weight: 300;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.7s;
    }
    .hero-description {
        font-size: 1.1rem;
        color: var(--gray-300);
        max-width: 600px;
        margin: 0 auto 2.5rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.9s;
    }
    .hero-cta {
        opacity: 0;
        animation: fadeInUp 1s ease forwards 1.1s;
    }
    .hero-scroll {
        position: absolute;
        bottom: 3rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        color: var(--gray-500);
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        opacity: 0;
        animation: fadeIn 1s ease forwards 1.5s;
    }
    .hero-scroll-line {
        width: 1px;
        height: 50px;
        background: linear-gradient(to bottom, var(--gold), transparent);
        animation: scrollPulse 2s ease infinite;
    }
    @keyframes scrollPulse {
        0%, 100% { opacity: 1; transform: scaleY(1); }
        50% { opacity: 0.5; transform: scaleY(0.7); }
    }
    @keyframes fadeIn {
        to { opacity: 1; }
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }
    .product-card {
        background: var(--bg-tertiary);
        border: 1px solid var(--gray-800);
        overflow: hidden;
        transition: all 0.4s ease;
    }
    .product-card:hover {
        border-color: var(--gold);
        transform: translateY(-10px);
    }
    .product-card-image {
        aspect-ratio: 1/1;
        background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    .product-card-image img {
        max-width: 80%;
        max-height: 80%;
        object-fit: contain;
        transition: transform 0.6s ease;
    }
    .product-card:hover .product-card-image img {
        transform: scale(1.08);
    }
    .product-card-content {
        padding: 1.5rem;
    }
    .product-card-label {
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 0.5rem;
    }
    .product-card-title {
        font-family: var(--font-main);
        font-size: 1.75rem;
        font-weight: 400;
        margin-bottom: 1rem;
    }
    .product-card-desc {
        font-size: 0.9rem;
        color: var(--gray-400);
        line-height: 1.7;
    }

    .stats-section {
        background: var(--bg-secondary);
        padding: 5rem 4rem;
    }
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }
    .stat-number {
        font-family: var(--font-main);
        font-size: 3.5rem;
        font-weight: 300;
        color: var(--gold);
        line-height: 1;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        font-size: 0.85rem;
        color: var(--gray-400);
    }

    .about-preview {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem;
        align-items: center;
    }
    .about-image {
        position: relative;
    }
    .about-image img {
        width: 100%;
    }
    .about-image::before {
        content: '';
        position: absolute;
        top: -20px;
        left: -20px;
        width: 100%;
        height: 100%;
        border: 1px solid var(--gold);
        z-index: -1;
    }
    .about-content h2 {
        font-family: var(--font-main);
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
        line-height: 1.3;
    }
    .about-content p {
        color: var(--gray-400);
        line-height: 1.9;
        margin-bottom: 1.5rem;
    }

    .contact-cta {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        text-align: center;
        padding: 6rem 4rem;
    }
    .contact-cta h2 {
        font-family: var(--font-main);
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
    }
    .contact-cta p {
        color: var(--gray-400);
        margin-bottom: 2rem;
    }

    @media (max-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .about-preview {
            grid-template-columns: 1fr;
            gap: 3rem;
        }
    }
    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: 1fr;
        }
        .stats-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
