---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Load content
const products = await getCollection('products');
const news = await getCollection('news');

// Sort products by order
const sortedProducts = products.sort((a, b) => a.data.order - b.data.order);

// Sort news by date (newest first) and take 3
const latestNews = news
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// Load page content
import homeContent from '../content/pages/home.json';
---

<BaseLayout title="피부 미용의 글로벌 리더 기업">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-bg">
            <img 
                src={homeContent.hero.image.src} 
                alt="BRITZMEDI" 
                class="hero-bg-image"
                style={`object-position: ${homeContent.hero.image.positionX}% ${homeContent.hero.image.positionY}%`}
            />
            <div class="hero-bg-overlay"></div>
        </div>
        <div class="hero-content">
            <p class="hero-subtitle">{homeContent.hero.subtitle}</p>
            <h1 class="hero-title" set:html={homeContent.hero.title}></h1>
            <p class="hero-description">{homeContent.hero.description}</p>
            <div class="hero-cta">
                <a href={homeContent.hero.ctaLink} class="btn">
                    {homeContent.hero.ctaText}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
        <div class="hero-scroll">
            <span>SCROLL</span>
            <div class="hero-scroll-line"></div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="bg-darker" style="padding: 6rem 4rem;">
        <div class="container">
            <div class="section-header reveal">
                <p class="section-label">{homeContent.products.label}</p>
                <h2 class="section-title" set:html={homeContent.products.title}></h2>
            </div>
            <div class="products-grid">
                {sortedProducts.map(product => (
                    <div class="product-card reveal">
                        <div class="product-card-image">
                            <img 
                                src={product.data.image.src} 
                                alt={product.data.name}
                                style={`max-width: ${product.data.image.scale}%; max-height: ${product.data.image.scale}%`}
                            />
                        </div>
                        <div class="product-card-content">
                            <p class="product-card-label">
                                {product.data.category === 'medical' ? 'Medical Device' : 'Medical Cosmetic'}
                            </p>
                            <h3 class="product-card-title">{product.data.name}</h3>
                            <p class="product-card-desc">{product.data.description}</p>
                            <a href={`/products/${product.data.urlSlug}`} class="product-card-link">
                                자세히 보기
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M5 12h14M12 5l7 7-7 7"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="stats-grid reveal">
            {homeContent.stats.map(stat => (
                <div class="stat-item">
                    <div class="stat-number">{stat.number}</div>
                    <div class="stat-label">{stat.label}</div>
                </div>
            ))}
        </div>
    </section>

    <!-- About Preview Section -->
    <section class="bg-dark" style="padding: 6rem 4rem;">
        <div class="container">
            <div class="about-preview">
                <div class="about-image reveal">
                    <img src={homeContent.about.image.src} alt="BRITZMEDI Company" />
                </div>
                <div class="about-content reveal">
                    <p class="section-label">{homeContent.about.label}</p>
                    <h2 set:html={homeContent.about.title}></h2>
                    {homeContent.about.description.split('\n\n').map(para => (
                        <p>{para}</p>
                    ))}
                    <a href={homeContent.about.ctaLink} class="btn">
                        {homeContent.about.ctaText}
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- News Preview Section -->
    <section class="bg-darker" style="padding: 6rem 4rem;">
        <div class="container">
            <div class="section-header reveal">
                <p class="section-label">{homeContent.news.label}</p>
                <h2 class="section-title" set:html={homeContent.news.title}></h2>
            </div>
            <div class="news-preview-grid reveal">
                {latestNews.map(item => (
                    <div class="news-preview-card">
                        <p class="news-preview-date">
                            {item.data.date.toLocaleDateString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\. /g, '.').replace('.', '')}
                        </p>
                        <h3 class="news-preview-title">
                            <a href={`/community/news/${item.slug}`}>{item.data.title}</a>
                        </h3>
                    </div>
                ))}
            </div>
            <div style="text-align: center; margin-top: 3rem;" class="reveal">
                <a href={homeContent.news.ctaLink} class="btn">
                    {homeContent.news.ctaText}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="contact-cta reveal">
        <p class="section-label">{homeContent.contact.label}</p>
        <h2>{homeContent.contact.title}</h2>
        <p>{homeContent.contact.description}</p>
        <a href={homeContent.contact.ctaLink} class="btn btn-primary">
            {homeContent.contact.ctaText}
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
        </a>
    </section>
</BaseLayout>

<style>
    /* Hero Section */
    .hero {
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .hero-bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.4;
    }
    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(10,10,10,0.9) 0%, rgba(10,10,10,0.6) 50%, rgba(10,10,10,0.8) 100%);
    }
    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        max-width: 1000px;
        padding: 0 2rem;
    }
    .hero-subtitle {
        font-size: 0.85rem;
        letter-spacing: 0.4em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 2rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.5s;
    }
    .hero-title {
        font-family: var(--font-main);
        font-size: clamp(2.5rem, 6vw, 5rem);
        font-weight: 300;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.7s;
    }
    .hero-description {
        font-size: 1.1rem;
        color: var(--gray-300);
        max-width: 600px;
        margin: 0 auto 2.5rem;
        opacity: 0;
        animation: fadeInUp 1s ease forwards 0.9s;
    }
    .hero-cta {
        opacity: 0;
        animation: fadeInUp 1s ease forwards 1.1s;
    }
    .hero-scroll {
        position: absolute;
        bottom: 3rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        color: var(--gray-500);
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        opacity: 0;
        animation: fadeIn 1s ease forwards 1.5s;
    }
    .hero-scroll-line {
        width: 1px;
        height: 50px;
        background: linear-gradient(to bottom, var(--gold), transparent);
        animation: scrollPulse 2s ease infinite;
    }
    @keyframes scrollPulse {
        0%, 100% { opacity: 1; transform: scaleY(1); }
        50% { opacity: 0.5; transform: scaleY(0.7); }
    }
    @keyframes fadeIn {
        to { opacity: 1; }
    }

    /* Products Grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }
    .product-card {
        position: relative;
        background: var(--bg-tertiary);
        border: 1px solid var(--gray-800);
        overflow: hidden;
        transition: all 0.4s ease;
    }
    .product-card:hover {
        border-color: var(--gold);
        transform: translateY(-10px);
    }
    .product-card-image {
        aspect-ratio: 1/1;
        overflow: hidden;
        background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }
    .product-card-image img {
        width: auto;
        height: auto;
        object-fit: contain;
        transition: transform 0.6s ease;
    }
    .product-card:hover .product-card-image img {
        transform: scale(1.08);
    }
    .product-card-content {
        padding: 1.5rem;
    }
    .product-card-label {
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 0.5rem;
    }
    .product-card-title {
        font-family: var(--font-main);
        font-size: 1.75rem;
        font-weight: 400;
        margin-bottom: 1rem;
    }
    .product-card-desc {
        font-size: 0.9rem;
        color: var(--gray-400);
        line-height: 1.7;
        margin-bottom: 1.5rem;
    }
    .product-card-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        color: var(--white);
        text-decoration: none;
        transition: color 0.3s ease;
    }
    .product-card-link:hover {
        color: var(--gold);
    }
    .product-card-link svg {
        width: 14px;
        height: 14px;
        transition: transform 0.3s ease;
    }
    .product-card-link:hover svg {
        transform: translateX(5px);
    }

    /* Stats Section */
    .stats-section {
        background: var(--bg-secondary);
        padding: 5rem 4rem;
    }
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }
    .stat-item {
        position: relative;
    }
    .stat-number {
        font-family: var(--font-main);
        font-size: 3.5rem;
        font-weight: 300;
        color: var(--gold);
        line-height: 1;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        font-size: 0.85rem;
        color: var(--gray-400);
    }

    /* About Preview */
    .about-preview {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem;
        align-items: center;
    }
    .about-image {
        position: relative;
    }
    .about-image img {
        width: 100%;
    }
    .about-image::before {
        content: '';
        position: absolute;
        top: -20px;
        left: -20px;
        width: 100%;
        height: 100%;
        border: 1px solid var(--gold);
        z-index: -1;
    }
    .about-content h2 {
        font-family: var(--font-main);
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1.5rem;
        line-height: 1.3;
    }
    .about-content p {
        color: var(--gray-400);
        line-height: 1.9;
        margin-bottom: 1.5rem;
    }

    /* News Preview */
    .news-preview-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }
    .news-preview-card {
        background: var(--bg-tertiary);
        border: 1px solid var(--gray-800);
        padding: 2rem;
        transition: all 0.3s ease;
    }
    .news-preview-card:hover {
        border-color: var(--gold);
    }
    .news-preview-date {
        font-size: 0.75rem;
        color: var(--gold);
        margin-bottom: 1rem;
    }
    .news-preview-title {
        font-size: 1.1rem;
        font-weight: 500;
        line-height: 1.5;
    }
    .news-preview-title a {
        color: var(--white);
        text-decoration: none;
        transition: color 0.2s ease;
    }
    .news-preview-title a:hover {
        color: var(--gold);
    }

    /* Contact CTA */
    .contact-cta {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        text-align: center;
        padding: 6rem 4rem;
    }
    .contact-cta h2 {
        font-family: var(--font-main);
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
    }
    .contact-cta p {
        color: var(--gray-400);
        margin-bottom: 2rem;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .products-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .about-preview {
            grid-template-columns: 1fr;
            gap: 3rem;
        }
    }
    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: 1fr;
        }
        .stats-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        .news-preview-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
