---
import BaseLayout from '../../layouts/BaseLayout.astro';
import companyData from '../../content/pages/company.json';

const { intro, ceo, values } = companyData;
---

<BaseLayout 
    title="회사소개"
    description="2017년 설립된 브리츠메디는 피부 미용 의료기기 전문 기업입니다. 대표이사 이신재의 비전 아래 혁신적인 연구개발로 TORR RF, UL BLANC 등 글로벌 수준의 에스테틱 솔루션을 제공합니다."
    canonicalPath="/company/intro"
>
    <section class="page-hero">
        <div class="page-hero-bg"></div>
        <div class="page-hero-overlay"></div>
        <div class="page-hero-content">
            <p class="page-hero-label">About Us</p>
            <h1 class="page-hero-title"><em>회사</em>소개</h1>
        </div>
    </section>

    <section class="bg-dark" style="padding: 5rem 4rem;">
        <div class="container">
            <div class="content-grid">
                <div class="content-image reveal">
                    <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&q=80" alt="BRITZMEDI Office" />
                </div>
                <div class="content-text reveal">
                    <p class="section-label">{intro.label}</p>
                    <h2 set:html={intro.title}></h2>
                    <p>{intro.description}</p>
                    <p>{intro.description2}</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-darker" style="padding: 5rem 4rem;">
        <div class="container">
            <div class="section-header reveal">
                <p class="section-label">{ceo.label}</p>
                <h2 class="section-title" set:html={ceo.title}></h2>
            </div>
            <div class="ceo-section reveal">
                <div class="ceo-content">
                    <blockquote set:html={`"${ceo.quote}"`}></blockquote>
                    <p>{ceo.greeting}</p>
                    <p>{ceo.message}</p>
                    <p>{ceo.message2}</p>
                    <div class="ceo-signature">
                        <span>{ceo.position}</span>
                        <strong>{ceo.name}</strong>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-dark" style="padding: 5rem 4rem;">
        <div class="container">
            <div class="section-header reveal">
                <p class="section-label">{values.label}</p>
                <h2 class="section-title" set:html={values.title}></h2>
            </div>
            <div class="card-grid">
                {values.items.map((item, index) => (
                    <div class="card reveal">
                        <div class="card-icon">
                            {index === 0 && (
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                                </svg>
                            )}
                            {index === 1 && (
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            )}
                            {index === 2 && (
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                                </svg>
                            )}
                        </div>
                        <h3>{item.title}</h3>
                        <p>{item.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    .ceo-section {
        max-width: 800px;
        margin: 0 auto;
    }
    .ceo-content blockquote {
        font-family: var(--font-main);
        font-size: 1.75rem;
        font-weight: 300;
        color: var(--gold);
        line-height: 1.5;
        margin-bottom: 2rem;
        padding-left: 2rem;
        border-left: 3px solid var(--gold);
    }
    .ceo-content p {
        color: var(--gray-400);
        line-height: 1.9;
        margin-bottom: 1rem;
    }
    .ceo-signature {
        margin-top: 2rem;
        text-align: right;
    }
    .ceo-signature span {
        display: block;
        font-size: 0.85rem;
        color: var(--gray-500);
        margin-bottom: 0.25rem;
    }
    .ceo-signature strong {
        font-size: 1.25rem;
        color: var(--white);
    }
</style>
